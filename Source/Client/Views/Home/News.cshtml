@model IEnumerable<Client.News.Models.NewsVM>

@{
    ViewData["Title"] = "News";
}

<h1>News</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                    <td>
                        @Html.ActionLink("View", "View", new { id=item.Id })
                       
                    </td>
               
            </tr>
        }
    </tbody>
</table>
